<h1><%= @article.title%></h1>

<div class='bloc'>
  <h2><em>Post</em></h2>
  <p><%= @article.body %><p>
</div>

<div class='bloc'>
  <h2><em>Comments</em></h2>
  <%= render @article.comments %>

  <h2><em>Add a comment:</em></h2>
  <%= render 'comments/form' %>
</div>

<div class='links'>
  <ul>
    <li><%= link_to 'Edit', edit_article_path(@article) %>
    </li>
    <li><%= link_to 'Destory', article_path(@article),
    method: :delete,
    data: {confirm: 'Are you sure?'} %>
    </li>
      <li><%= link_to 'Home Page', root_path(@article) %>
    </li>
  </ul>
</div>